<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/business_main_getproducts_id"
        android:layout_width="27dp"
        android:layout_height="37dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:singleLine="true"
        android:text="@string/business_main_getproducts_id"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/business_main_getproducts_name"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/business_main_getproducts_name"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/business_main_getproducts_type"
        android:layout_width="67dp"
        android:layout_height="37dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:singleLine="true"
        android:text="@string/business_main_getproducts_type"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/business_main_getproducts_price"
        android:layout_width="77dp"
        android:layout_height="37dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:singleLine="true"
        android:text="@string/business_main_getproducts_price"
        android:textSize="17sp" />

    <Button
        android:id="@+id/business_main_getproducts_button_buy"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:text="@string/business_main_getproducts_button_buy" />

</LinearLayout>